<Window x:Class="WypozyczalniaGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WypozyczalniaGUI"
        mc:Ignorable="d"
        Title="System Obsługi Wypożyczalni Narciarskiej" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ToolBar Grid.Row="0" Background="#F0F0F0">
            <Button Content="Dodaj Rezerwację" Click="BtnDodajRezerwacje_Click" Margin="5" Padding="10,2"/>
            <Separator/>
            <Button Content="Zarządzaj Sprzętem" Click="BtnSprzet_Click" Margin="5"/>
            <Button Content="Baza Klientów" Click="BtnKlienci_Click" Margin="5"/>
            <Separator/>
            <Button Content="Zapisz Dane (XML)" Click="BtnZapisz_Click" Margin="5"/>
            <Button Content="Wczytaj Dane" Click="BtnWczytaj_Click" Margin="5"/>
        </ToolBar>

        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Rezerwacje">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dgRezerwacje" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Klient" Binding="{Binding Klient}" Width="*"/>
                            <DataGridTextColumn Header="Sprzęt" Binding="{Binding Sprzet}" Width="*"/>
                            <DataGridTextColumn Header="Od" Binding="{Binding DataOd, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
                            <DataGridTextColumn Header="Do" Binding="{Binding DataDo, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
                            <DataGridTextColumn Header="Przewidywany Koszt" Binding="{Binding Koszt, StringFormat={}{0:N2} zł}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Zrealizuj (Wypożycz)" Click="BtnRealizuj_Click" Margin="5" Width="150" Height="30"/>
                        <Button Content="Anuluj Rezerwację" Click="BtnAnuluj_Click" Margin="5" Width="150"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Wypożyczenia">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dgWypozyczenia" Grid.Row="0" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Klient" Binding="{Binding Klient}" Width="*"/>
                            <DataGridTextColumn Header="Sprzęt" Binding="{Binding Sprzet}" Width="*"/>
                            <DataGridTextColumn Header="Data Wypożyczenia" Binding="{Binding DataOd, StringFormat={}{0:dd.MM.yyyy}}" Width="150"/>
                            <DataGridCheckBoxColumn Header="Zakończone" Binding="{Binding Zakonczone, Mode=OneWay}" IsReadOnly="True" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Przyjmij zwrot" Click="BtnPrzyjmijZwrot_Click" Margin="5" Width="150" Height="30"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="Gotowy"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="txtStatusPliku" Text="Plik: brak"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
