<Window x:Class="WypozyczalniaGUI.NewReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WypozyczalniaGUI"
        mc:Ignorable="d"
        Title="Nowa Rezerwacja" Height="550" Width="600">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="1. Wybierz Klienta" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="5">
                <ComboBox x:Name="cbKlienci" Width="400" Margin="0,0,10,0"/>
                <Button Content="Nowy Klient" Click="BtnNowyKlient_Click" Padding="10,2"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="2. Termin Rezerwacji" Grid.Row="1" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="0" Margin="5">
                    <TextBlock Text="Data Od:"/>
                    <DatePicker x:Name="dpDataOd" SelectedDateChanged="Termin_Changed"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="5">
                    <TextBlock Text="Data Do:"/>
                    <DatePicker x:Name="dpDataDo" SelectedDateChanged="Termin_Changed"/>
                </StackPanel>

                
            </Grid>
        </GroupBox>

        <GroupBox Header="2. Wybierz Sprzęt (Dostępny w wybranym terminie)" Grid.Row="2" Margin="0,0,0,10">
            <ListBox x:Name="lbDostepnySprzet" SelectionMode="Single" Margin="5" SelectionChanged="LbDostepnySprzet_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding .}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <StackPanel Grid.Row="3" VerticalAlignment="Bottom" Margin="10,5">
            <TextBlock Text="Szacowany koszt:" FontWeight="Bold"/>
            <TextBlock x:Name="lblSuma" Text="0.00 zł" FontSize="18" Foreground="DarkGreen"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnZatwierdz" Content="Zatwierdź Rezerwację" Click="BtnZatwierdz_Click" 
                    Width="150" Height="35" Margin="5" Background="#E3F2FD" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
