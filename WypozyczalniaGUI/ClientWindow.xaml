<Window x:Class="WypozyczalniaGUI.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WypozyczalniaGUI"
        mc:Ignorable="d"
        Title="Zarządzanie bazą klientów" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Zarejestrowani Klienci" Grid.Column="0" Margin="5">
            <DockPanel>
                <DataGrid x:Name="dgKlienci" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Imię" Binding="{Binding Imie}" Width="*"/>
                        <DataGridTextColumn Header="Nazwisko" Binding="{Binding Nazwisko}" Width="*"/>
                        <DataGridTextColumn Header="PESEL" Binding="{Binding Pesel}" Width="100"/>
                        <DataGridTextColumn Header="Telefon" Binding="{Binding NumerTelefonu}" Width="100"/>
                        <DataGridTextColumn Header="E-mail" Binding="{Binding Email}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>

        <GroupBox Header="Dodaj Nowego Klienta" Grid.Column="1" Margin="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="5">
                    <TextBlock Text="Imię:"/>
                    <TextBox x:Name="txtImie" Margin="0,0,0,10"/>

                    <TextBlock Text="Nazwisko:"/>
                    <TextBox x:Name="txtNazwisko" Margin="0,0,0,10"/>

                    <TextBlock Text="PESEL:"/>
                    <TextBox x:Name="txtPesel" Margin="0,0,0,10" MaxLength="11"/>

                    <TextBlock Text="Data Urodzenia:"/>
                    <DatePicker x:Name="dpDataUrodzenia" Margin="0,0,0,10"/>

                    <TextBlock Text="Numer Telefonu:"/>
                    <TextBox x:Name="txtTelefon" Margin="0,0,0,10"/>

                    <TextBlock Text="Adres E-mail:"/>
                    <TextBox x:Name="txtEmail" Margin="0,0,0,15"/>

                    <Button x:Name="btnDodajKlienta" Content="Dodaj Klienta" 
                            Click="BtnDodajKlienta_Click" Height="35" 
                            Background="#E8F5E9" FontWeight="Bold"/>

                    <TextBlock x:Name="lblStatus" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
